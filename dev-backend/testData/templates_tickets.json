          "style": {
            "font-weight": "bold",
            "color": "white",
            "font-size": "20px",
            "h-align": "center"
          }
        },
        {
          "key": "name",
          "type": "textfield",
          "x": 8,
          "y": 44,
          "w": 200,
          "h": 32,
          "attribute": "core:name",
          "style": {
            "font-size": "12px",
            "color": {
              "$": "TEXT_COLOR"
            }
          }
        },
        {
          "key": "storybar",
          "type": "chart",
          "x": 8,
          "y": 102,
          "h": 10,
          "attribute": "jira:storypoints",
          "color": "rgba(0,0,0,0.15)",
          "chartType": "rect",
          "maxW": 200,
          "maxValue": 24
        },
        {
          "key": "storypts",
          "type": "textfield",
          "x": 8,
          "y": 67,
          "w": 30,
          "h": 20,
          "attribute": "jira:storypoints",
          "style": {
            "font-size": "16px",
            "font-weight": "bold",
            "color": {
              "$": "TEXT_COLOR"
            }
          }
        },
        {
          "key": "teamname",
          "type": "caption",
          "x": 50, "y": 67, "w": 80, "h": 18,
          "text": "Team: {{jira:team}}",
          "style": {"$": "LABEL_SMALL_STYLE"}
        },
        {
          "key": "status",
          "type": "caption",
          "x": 130,
          "y": 67,
          "w": 90,
          "h": 20,
          "text": "Status: {{jira:status}}",
          "style": {"$": "LABEL_SMALL_STYLE"}
        },
        {
          "key": "link",
          "type": "link",
          "x": 130,
          "y": 82,
          "w": 50,
          "h": 12,
          "url": "http://test.com/ticket/{{core:uri}}",
          "style": {
            "font-size": "8px",
            "font-weight": "normal"
          },
          "text": "Jira Link"
        }
      ]
    },
    {
      "id": "ticket-compact",
