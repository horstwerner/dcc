{
  "cards": [
    {
      "type": "jira:ticket",
      "size": {
        "w": 220,
        "h": 120
      },
      "background": {
        "type": "image",
        "source": "/images/SimpleCard.svg",
        "w": 220,
        "h": 120,
        "cornerRadius": 6
      },
      "colorcoding": {
        "type": "selection",
        "attribute": "jira:status",
        "cases": [
          {
            "condition": "=closed",
            "color": "#548546"
          },
          {
            "condition": "=in validation",
            "color": "#7ea550"
          },
          {
            "condition": "=in code review",
            "color": "#b2cb80"
          },
          {
            "condition": "=in progress",
            "color": "#cec955"
          },
          {
            "condition": "=blocked",
            "color": "#b65b56"
          },
          {
            "condition": "=open",
            "color": "#b0b0b0"
          }
        ],
        "default": "#a0a0a0"
      },
      "elements": [
        {
          "key": "heading",
          "type": "textfield",
          "attribute": "uri",
          "style" : {
            "font-weight": "bold",
            "color": "white",
            "font-size": "20px",
            "hAlign": "center"
          },
          "x": 10,
          "y": 10,
          "w": 200,
          "h": 18
        },
        {
          "key": "name",
          "type": "textfield",
          "x": 10,
          "y": 47,
          "w": 200,
          "h": 32,
          "attribute": "core:name",
          "style": {
            "color": "rgba(0,0,0,0.6)"
          }
        },
        {
          "key": "storybar",
          "type": "chart",
          "chartType": "rect",
          "x": 10,
          "y": 89 ,
          "maxW": 200,
          "h": 20,
          "attribute": "jira:storypoints",
          "maxValue": 24,
          "color": "rgba(0,0,0,0.15)"
        }
      ]
    },
    {
      "type": "root",
      "background": {
        "type": "rect",
        "color": "#F0F0F0",
        "w": 1400,
        "h": 700
      },
      "elements": [
        {
          "key": "alerts",
          "type": "childcards",
          "source": "jira:ticket",
          "aggregate": {
            "aggregations": {},
            "texts": {
              "title": "{{core:nodeCount}} Stories"
            }
          },
          "template": "grid",
          "x": 20,
          "y": 20,
          "w": 400,
          "h": 660,
          "clickAction": "focusAlerts"
        }
      ]
    },
    {
      "type": "grid",
      "size": {
        "w": 400,
        "h": 800
      },
      "background": {
        "type": "rect",
        "color": "#FEFEFE",
        "x": 0,
        "y": 0,
        "w": 400,
        "h": 750,
        "cornerRadius": "6px"
      },
      "elements": [
        {
          "key": "title",
          "type": "textfield",
          "attribute": "title",
          "x": 30,
          "y": 20,
          "w": 200,
          "h": 32,
          "style": {
            "color": "#A0A0A0",
            "font-size": "24px",
            "hAlign": "left",
            "font-weight": "bold"
          }
        },
        {
          "key": "nodes",
          "type": "childcards",
          "source": "core:subNodes",
          "arrangement": {
            "x": 20,
            "y": 60,
            "w": 360,
            "h": 720,
            "type": "grid",
            "lod": "full",
            "padding": 0.1
          },
          "template": "jira:ticket"
        }
      ]
    }
  ]
}
