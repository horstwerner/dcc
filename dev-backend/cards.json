{
  "cards": [
    {
      "type": "jira:ticket",
      "size": {
        "w": 220,
        "h": 120
      },
      "background": {
        "type": "image",
        "source": "/images/SimpleCard.svg",
        "w": 220,
        "h": 120,
        "cornerRadius": 6
      },
      "colorcoding": {
        "type": "selection",
        "attribute": "jira:status",
        "cases": [
          {
            "condition": "=closed",
            "color": "#548546"
          },
          {
            "condition": "=in validation",
            "color": "#7ea550"
          },
          {
            "condition": "=in code review",
            "color": "#b2cb80"
          },
          {
            "condition": "=in progress",
            "color": "#cec955"
          },
          {
            "condition": "=blocked",
            "color": "#b65b56"
          },
          {
            "condition": "=open",
            "color": "#b0b0b0"
          }
        ],
        "default": "#a0a0a0"
      },
      "elements": [
        {
          "key": "heading",
          "type": "textfield",
          "attribute": "uri",
          "style" : {
            "font-weight": "bold",
            "color": "white",
            "font-size": "20px",
            "hAlign": "center"
          },
          "x": 10,
          "y": 10,
          "w": 200,
          "h": 18
        },
        {
          "key": "name",
          "type": "textfield",
          "x": 10,
          "y": 47,
          "w": 200,
          "h": 32,
          "attribute": "core:name",
          "style": {
            "color": "rgba(0,0,0,0.6)"
          }
        },
        {
          "key": "storybar",
          "type": "chart",
          "chartType": "rect",
          "x": 10, "y": 89 , "maxW": 200, "h": 20,
          "attribute": "jira:storypoints",
          "maxValue": 24,
          "color": "rgba(0,0,0,0.15)"
        },
        {
          "key": "storypts",
          "type": "textfield",
          "x": 12, "y": 67, "w": 30, "h": 20,
          "attribute": "jira:storypoints",
          "style": {
            "font-size": "16px",
            "font-weight": "bold",
            "color": "#FFFFFF"
          }
        }
      ]
    },
    {
      "type": "root",
      "background": {
        "type": "rect",
        "color": "#F0F0F0",
        "w": 1400,
        "h": 1000
      },
      "elements": [
        {
          "key": "alerts",
          "type": "childcards",
          "source": "jira:ticket",
          "aggregate": {
            "aggregations": {
              "total-storypoints": {"attribute": "jira:storypoints", "calculate": "sum"}
            },
            "texts": {
              "title": "{{core:nodeCount}} Stories"
            }
          },
          "template": "grid",
          "x": 10, "y": 10, "w": 800, "h": 800,
          "clickAction": "focusAlerts"
        }
      ]
    },
    {
      "type": "grid",
      "background": {
        "type": "rect",
        "color": "#FEFEFE",
        "x": 0,
        "y": 0,
        "w": 400,
        "h": 400,
        "cornerRadius": "6px"
      },
      "elements": [
        {
          "key": "title",
          "type": "textfield",
          "attribute": "title",
          "x": 30,
          "y": 20,
          "w": 200,
          "h": 32,
          "style": {
            "color": "#A0A0A0",
            "font-size": "24px",
            "hAlign": "left",
            "font-weight": "bold"
          }
        },
        {
          "key": "storyptLabel",
          "type": "caption",
          "text": "Total Storypoints:",
          "x": 240,
          "y": 32,
          "w": 200,
          "h": 24,
          "style": {
            "color": "#A0A0A0",
            "font-size": "12px",
            "hAlign": "left",
            "font-weight": "bold"
          }
        },
        {
          "key": "storypts",
          "type": "textfield",
          "attribute": "total-storypoints",
          "x": 348,
          "y": 30,
          "w": 200,
          "h": 24,
          "style": {
            "color": "#A0A0A0",
            "font-size": "16px",
            "hAlign": "left",
            "font-weight": "bold"
          }
        },
        {
          "key": "storybar",
          "type": "chart",
          "source": "core:subNodes",
          "sortSequence": ["closed","in validation","in code review","in progress","blocked","open"],
          "chartType": "stackedBar",
          "x": 30, "y": 60 , "w": 360, "h": 20,
          "widthAttribute": "jira:storypoints",
          "maxValue": 700,
          "colorAttribute": "jira:status",
          "colors": [
            {
              "condition": "=closed",
              "color": "#548546"
            },
            {
              "condition": "=in validation",
              "color": "#7ea550"
            },
            {
              "condition": "=in code review",
              "color": "#b2cb80"
            },
            {
              "condition": "=in progress",
              "color": "#cec955"
            },
            {
              "condition": "=blocked",
              "color": "#b65b56"
            },
            {
              "condition": "=open",
              "color": "#b0b0b0"
            }
          ],
          "defaultColor": "#a0a0a0"
        },
        {
          "key": "nodes",
          "type": "childcards",
          "source": "core:subNodes",
          "arrangement": {
            "x": 20,
            "y": 80,
            "w": 360,
            "h": 280,
            "type": "grid",
            "lod": "full",
            "padding": 0.1
          },
          "template": "jira:ticket"
        }
      ]
    }
  ]
}
