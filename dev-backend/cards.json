        "color": {
          "$": "TEXT_COLOR"
        },
        "font-family": "Arial, sans serif"
      }},
    {"CARD_HEADING_STYLE": {
        "font-family": "Arial, sans serif",
        "color": {
          "$": "HEADING_COLOR"
        },
        "font-weight": "600",
        "font-size": "24px",
        "text-transformation": "uppercase"
